<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        app:layout_constraintStart_toStartOf="@id/guidelineLeft"
        app:layout_constraintEnd_toStartOf="@id/guidelineMark"
        app:layout_constraintBottom_toBottomOf="@id/guidelineBottom"
        app:layout_constraintTop_toTopOf="@id/guidelineTop"
        android:layout_margin="5dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/calculatorToolbar"
                app:title="@string/calculator"
                style="@style/AppTheme.Toolbar"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/attenuationDisplay"
                style="@style/AppTheme.Text.View"
                android:textSize="12sp"
                android:gravity="center"
                android:text="@string/default_Attenuation"
                android:padding="10dp"
                app:layout_constraintBottom_toTopOf="@id/abvDisplay"
                app:layout_constraintEnd_toEndOf="@+id/abvDisplay"
                app:layout_constraintStart_toStartOf="@+id/abvDisplay"
                app:layout_constraintTop_toBottomOf="@id/calculatorToolbar"
                app:layout_constraintVertical_chainStyle="spread"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/abvDisplay"
                style="@style/AppTheme.Text.View"
                android:textSize="24sp"
                android:textStyle="bold"
                android:text="@string/default_Abv"
                android:gravity="center"
                android:padding="10dp"
                app:layout_constraintBottom_toTopOf="@id/warningDisplay"
                app:layout_constraintEnd_toEndOf="@+id/warningDisplay"
                app:layout_constraintStart_toStartOf="@+id/warningDisplay"
                app:layout_constraintTop_toBottomOf="@id/attenuationDisplay"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/warningDisplay"
                style="@style/AppTheme.Text.View"
                android:textSize="12sp"
                android:text="@string/default_Warning"
                android:textColor="@android:color/holo_red_dark"
                android:gravity="center"
                android:padding="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/abvDisplay" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineMark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.40" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/guidelineTop"
            app:layout_constraintBottom_toBottomOf="@id/guidelineBottom"
            app:layout_constraintStart_toStartOf="@id/guidelineMark"
            app:layout_constraintEnd_toEndOf="@id/guidelineRight">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/ogContainer"
                style="@style/AppTheme.Text.Edit.Container"
                android:hint="@string/O_G"
                app:layout_constraintBottom_toTopOf="@+id/fgContainer"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/eTxtOG"
                    style="@style/AppTheme.Text.Edit" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/fgContainer"
                style="@style/AppTheme.Text.Edit.Container"
                android:hint="@string/F_G"
                app:layout_constraintBottom_toTopOf="@+id/unitContainer"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ogContainer">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/eTxtFG"
                    style="@style/AppTheme.Text.Edit" />

            </com.google.android.material.textfield.TextInputLayout>

            <RadioGroup
                android:id="@+id/unitContainer"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                app:layout_constraintBottom_toTopOf="@+id/radioGroup2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fgContainer">

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/chkBxSG"
                    style="AppTheme.RadioButton"
                    android:text="@string/SG" />

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/chkBxPlato"
                    style="AppTheme.RadioButton"
                    android:text="@string/Plato" />

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/chkBxBrix"
                    style="AppTheme.RadioButton"
                    android:text="@string/brix" />

            </RadioGroup>

            <RadioGroup
                android:id="@+id/radioGroup2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/unitContainer">

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/chkBxSimple"
                    style="AppTheme.RadioButton"
                    android:text="@string/simEquation" />

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/chkBxAdvanced"
                    style="AppTheme.RadioButton"
                    android:text="@string/advEquation" />

            </RadioGroup>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="20dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="20dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="10dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineBottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_end="10dp" />

</androidx.constraintlayout.widget.ConstraintLayout>